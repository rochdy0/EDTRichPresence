    "scripts": {
        "build":"electron-builder build --mac --win --x64 --arm64 --publish never",
        "deploy":"electron-builder build --mac --win --x64 --arm64 --publish always",
        "test": "electron ."
    },
    "author": "Zaldrizes",
    "license": "GPL-3.0",
